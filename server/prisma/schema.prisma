generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  posts      Post[]
}

model Post {
  id         String   @id @default(cuid())
  title      String
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  author     User     @relation(fields: [authorId], references: [id])
  authorId   String
}
